@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<form name="myForm" data-ng-app="myApp" data-ng-controller="fornecedorCtrl">
    <div class="container">
        <div class="form-horizontal">

            <div class="form-group">
                <label class="control-label col-md-2">Nome:</label>
                <div class="col-md-5">
                    <input type="text" class="form-control" name="nome" data-ng-model="fornecedor.Nome" placeholder="Digite aqui..." required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">CNPJ:</label>
                <div class="col-md-5">
                    <input type="text" mask="99.999.999/9999-99" ng-minlength="14" class="form-control" name="cnpj" data-ng-model="fornecedor.CNPJ" placeholder="Digite aqui..." required />
                </div>
            </div>
            <hr />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button data-ng-disabled="myForm.nome.$invalid || myForm.cnpj.$invalid" class="btn btn-info glyphicon glyphicon-plus-sign" name="btnCadastrar" data-ng-click="cadastrar(fornecedor)"> Cadastrar Fornecedor</button>
                </div>
            </div>
        </div>
    </div>
</form>

