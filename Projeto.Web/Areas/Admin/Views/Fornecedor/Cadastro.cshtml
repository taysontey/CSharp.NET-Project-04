
@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="container" data-ng-app="myApp" data-ng-controller="fornecedorCtrl">
    <div class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-md-2">Nome:</label>
            <div class="col-md-5">
                <input type="text" class="form-control" name="nome" data-ng-model="fornecedor.Nome" placeholder="Digite aqui..." required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">CNPJ:</label>
            <div class="col-md-5">
                <input type="text" class="form-control" name="cnpj" data-ng-model="fornecedor.CNPJ" placeholder="Digite aqui..." required/>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn btn-info glyphicon glyphicon-plus-sign" name="btnCadastrar" data-ng-click="cadastrar(fornecedor)"> Cadastrar Fornecedor</button>
            </div>
        </div>
    </div>
</div>
