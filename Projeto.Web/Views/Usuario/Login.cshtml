@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form name="myForm" data-ng-app="myApp" data-ng-controller="loginCtrl">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-5 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading" style="text-align:center">
                        <h4>Login de Usuários</h4>
                    </div>
                    <div class="panel-body">

                        <input type="text" name="login" data-ng-model="usuario.Login" class="form-control" placeholder="Login" required />
                        <br />

                        <input type="password" name="senha" data-ng-model="usuario.Senha" class="form-control" placeholder="Senha" required />
                        <br />

                    </div>
                    <div class="panel-footer">
                        <div class="col-md-7">
                        </div>
                        <button style="width:150px" class="btn btn-info glyphicon glyphicon-log-in" name="btnLogin" data-ng-click="login(usuario)" ng-disabled="myForm.login.$invalid || myForm.senha.$invalid">
                            Entrar
                        </button>
                        <hr />

                        <div class="col-md-7">
                            Não possui um login?
                        </div>
                        <div class="col-md-5">
                            <a href="/Usuario/Cadastro">Cadastrar Usuário</a>
                        </div>
                        <br />
                        <br />
                    </div>
                </div>
                <hr />
                <span>{{msg}}</span>
            </div>
        </div>
    </div>
</form>
